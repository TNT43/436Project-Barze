<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/averageWaitingTimeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Enter average waiting time"
        android:textColor="@color/quantum_black_text"
        android:textSize="30dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/WaitingTimeInput"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/averageWaitingTimeLabel"
        />

    <Button
        android:id="@+id/btnSubmitWaitTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Submit Wait Time"
        app:layout_constraintTop_toBottomOf="@id/WaitingTimeInput"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/FavoriteCheckBox"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="Favorite Bar ?"
        app:layout_constraintTop_toBottomOf="@+id/btnSubmitWaitTime"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/FavoriteCheckBox"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>